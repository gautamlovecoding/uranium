const userModel = require ("../models/userModel")

const createNewBooks = async function (req, res) {

    let booksData= req.body;
    let savedData = await userModel.create(booksData)
    res.send({msg: savedData});

}

const getListsOfBooks = async function (req, res) {
    let allBooks = await userModel.find();
    res.send({msg: allBooks});
}

module.exports.createNewBooks = createNewBooks;
module.exports.getListsOfBooks = getListsOfBooks;